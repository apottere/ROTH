package com.ROTH.Framwork;

import java.awt.Image;
import java.awt.image.BufferedImage;
import java.io.File;

import javax.imageio.ImageIO;

public class ROTHLevelActor {
	
	private int PosX;
	private int PosY;
	private final String tag;
	
	BufferedImage bigImg = ImageIO.read(new File("sheet.png"));


	final int width = 10;
	final int height = 10;
	final int rows = 5;
	final int cols = 5;
		
	Image actor = null;
	
	public ROTHLevelActor(String tag, File file, int x, int y) {
		this.tag = tag; 
		this.actor = actor;
		PosX=x;
		PosY=y;
	}
	
	public void SetPosition(int x, int y){
		this.setPosX(x);
		this.setPosY(y);
	}
	
	public void move(int x, int y){
		setPosX(getPosX() + x);
		setPosY(getPosY() + y);
	}

	

	public String getTag() {
		return tag;
	}

	public int getPosX() {
		return PosX;
	}

	public void setPosX(int posX) {
		PosX = posX;
	}

	public int getPosY() {
		return PosY;
	}

	public void setPosY(int posY) {
		PosY = posY;
	}
	
	

}
