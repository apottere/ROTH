package com.ROTH.Framwork;

import java.awt.Graphics2D;
import java.awt.Image;
import java.util.ArrayList;

public class RenderingCheckerThread extends Thread {
	
	public ArrayList<ArrayList<Image>> map = null;
	public ArrayList<ArrayList<Image>> rendermap = null;
	public Graphics2D g2d = null;

	
	public void run (){
		
		while(true){
			
			int Xscale = 40;
			int Yscale = 40;
			
			if(map == null || rendermap == null || g2d == null){
				
			}else{
				for(int x = 0; x<500; x++){
					for(int y = 0; y < 500; y++){
				
						if( Math.abs((x*Xscale+Xoffset - user.getPosX())) > 50*Xscale || Math.abs(y*Yscale+Yoffset - user.getPosY()) > 50*Yscale){
							
						}else{
							g2d.drawImage(map.get(x).get(y), Xoffset+x*Xscale, Yoffset+y*Yscale, Xscale, Yscale,
						null);
						}
					
					
					}
				}
		
			}
		}
	}
	
	

}
