package com.ROTH.Framwork;

import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.util.ArrayList;




public class ROTHDesktopController implements ROTHController, KeyListener {

	
	private ArrayList<Character> actions = new ArrayList<Character>();
	public int DirX=0;
	public int DirY=0;
	
	public ArrayList<Character> getActionList() {
		return actions;
	}

	@Override
	public void keyPressed(KeyEvent e) {
		
		if(e.getKeyCode()==(KeyEvent.VK_W) || e.getKeyCode()==(KeyEvent.VK_UP)){
			DirY+=1;
		}else if(e.getKeyCode()==(KeyEvent.VK_S) || e.getKeyCode()==(KeyEvent.VK_DOWN)){
			DirY-=1;
		}else if(e.getKeyCode()==(KeyEvent.VK_A) || e.getKeyCode()==(KeyEvent.VK_LEFT)){
			DirX-=1;
		}else if(e.getKeyCode()==(KeyEvent.VK_D) || e.getKeyCode()==(KeyEvent.VK_RIGHT)){
			DirX+=1;
		}else{
			System.out.println("Key is: " + e.getKeyChar());
		}
		
		if(DirX>1)
			DirX=1;
		if(DirX < -1)
			DirX = -1;
		if(DirY>1)
			DirY=1;
		if(DirY < -1)
			DirY = -1;
		
			
	}

	@Override
	public void keyReleased(KeyEvent e) {
		
		if(e.getKeyCode()==(KeyEvent.VK_W) || e.getKeyCode()==(KeyEvent.VK_UP)){
			DirY-=1;
		}else if(e.getKeyCode()==(KeyEvent.VK_S) || e.getKeyCode()==(KeyEvent.VK_DOWN)){
			DirY+=1;
		}else if(e.getKeyCode()==(KeyEvent.VK_A) || e.getKeyCode()==(KeyEvent.VK_LEFT)){
			DirX+=1;
		}else if(e.getKeyCode()==(KeyEvent.VK_D) || e.getKeyCode()==(KeyEvent.VK_RIGHT)){
			DirX-=-1;
		}
		
		
	}

	@Override
	public void keyTyped(KeyEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public int getDirX() {
		// TODO Auto-generated method stub
		return DirX;
	}

	@Override
	public int getDirY() {
		// TODO Auto-generated method stub
		return DirY;
	}

}
